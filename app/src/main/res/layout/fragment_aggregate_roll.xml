<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/aggregateRollLayout">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:listitem="@layout/holder_aggregate_die"
            android:id="@+id/aggregateRecycler"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toTopOf="@+id/diceModLayout" app:layout_constraintVertical_weight="9">
    </androidx.recyclerview.widget.RecyclerView>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/diceModLayout"
            android:background="?attr/colorPrimary"
            android:layout_marginStart="8dp" android:padding="4dp" android:paddingStart="4dp" android:paddingLeft="4dp"
            android:paddingTop="4dp" android:paddingRight="4dp" android:paddingBottom="4dp" android:paddingEnd="4dp"
            app:layout_constraintTop_toBottomOf="@+id/aggregateRecycler" app:layout_constraintVertical_weight="1">
        <Button
                android:text="@string/roll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rollButton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/divider3"/>
        <View
                android:id="@+id/divider3"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
        />
        <fragment
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:name="com.fialasfiasco.customdiceroller.helper.UpDownButtonsFragment"
                android:id="@+id/aggregateModifierUpDownFragment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/divider3"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="4dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>