<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:padding="4dp"
                                                   android:paddingStart="4dp" android:paddingLeft="4dp"
                                                   android:paddingTop="4dp" android:paddingEnd="4dp"
                                                   android:paddingRight="4dp" android:paddingBottom="4dp">

    <TextView
            android:text="@string/temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rollTitleText"
            android:textColor="@android:color/primary_text_dark" android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/rollResultText"
            app:layout_constraintBottom_toTopOf="@+id/rollDetailsText"
            app:layout_constraintEnd_toStartOf="@+id/rollTimeStampText" android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
    <TextView
            android:text="@string/temp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/rollResultText"
            android:textColor="@android:color/primary_text_dark"
            android:textAlignment="center" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center"
            android:background="@android:color/background_dark"
            android:minHeight="65dp" android:minWidth="65dp" android:padding="4dp" android:paddingStart="4dp"
            android:paddingLeft="4dp" android:paddingTop="4dp" android:paddingEnd="4dp" android:paddingRight="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rollTitleText" app:layout_constraintDimensionRatio="h,1:1"/>
    <TextView
            android:text="@string/temp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rollDetailsText" android:textAlignment="textStart"
            android:textColor="@android:color/primary_text_dark"
            app:layout_constraintTop_toBottomOf="@+id/rollTitleText"
            app:layout_constraintStart_toEndOf="@+id/rollResultText"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="4dp"/>
    <TextView
            android:text="@string/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rollTimeStampText"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" android:textAlignment="viewEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rollTitleText"
            app:layout_constraintBottom_toBottomOf="@+id/rollTitleText"/>
</androidx.constraintlayout.widget.ConstraintLayout>