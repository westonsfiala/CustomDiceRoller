<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.main.RollerFragment"
                                                   android:id="@+id/dieViewLayout">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@android:drawable/ic_menu_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/editDieFab"
            app:layout_constraintBottom_toBottomOf="@+id/dieViewRecycler" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:backgroundTint="@android:color/darker_gray" android:focusable="true"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/diceModLayout"
            android:id="@+id/dieViewRecycler"
            app:layoutManager="LinearLayoutManager"
            tools:context=".simple_roller.SimpleRollFragment"
            tools:listitem="@layout/holder_simple_die" android:longClickable="true"
            app:layout_constraintVertical_weight="4"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/diceModLayout"
            android:background="?attr/colorPrimary" app:layout_constraintTop_toBottomOf="@+id/dieViewRecycler"
            android:layout_marginStart="8dp" android:padding="4dp" android:paddingStart="4dp" android:paddingLeft="4dp"
            android:paddingTop="4dp" android:paddingRight="4dp" android:paddingBottom="4dp" android:paddingEnd="4dp"
            app:layout_constraintVertical_weight="1">
        <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintEnd_toStartOf="@+id/modifierUpDownFragment"
                app:layout_constraintStart_toEndOf="@+id/numDiceUpDownFragment"
        />
        <fragment
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:name="com.fialasfiasco.customdiceroller.helper.UpDownButtonsFragment"
                android:id="@+id/modifierUpDownFragment"
                app:layout_constraintStart_toEndOf="@+id/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_weight="1"
                android:layout_marginStart="4dp"/>
        <fragment
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:name="com.fialasfiasco.customdiceroller.helper.UpDownButtonsFragment"
                android:id="@+id/numDiceUpDownFragment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/divider"
                app:layout_constraintHorizontal_weight="1" android:layout_marginEnd="4dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>