<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.main.RollerFragment"
                                                   android:id="@+id/dieViewLayout">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@android:drawable/ic_menu_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/editDieFab"
            app:layout_constraintBottom_toBottomOf="@+id/dieViewRecycler" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:backgroundTint="@android:color/darker_gray" android:focusable="true"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/diceModLayout"
            android:id="@+id/dieViewRecycler"
            app:layoutManager="LinearLayoutManager"
            tools:context=".simple_roller.SimpleRollFragment"
            tools:listitem="@layout/holder_simple_die" android:longClickable="true"
    />
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/diceModLayout"
            android:background="?attr/colorPrimary" app:layout_constraintTop_toBottomOf="@+id/dieViewRecycler"
            android:layout_marginStart="8dp" android:padding="4dp" android:paddingStart="4dp" android:paddingLeft="4dp"
            android:paddingTop="4dp" android:paddingRight="4dp" android:paddingBottom="4dp" android:paddingEnd="4dp">
        <ImageButton
                android:src="@android:drawable/arrow_down_float"
                android:layout_width="0dp"
                android:layout_height="0dp" android:id="@+id/diceDownButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/numDiceText"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintHeight_max="48dp" app:layout_constraintWidth_max="48dp"/>
        <TextView
                android:text="@string/temp"
                android:layout_width="0dp"
                android:layout_height="0dp" android:id="@+id/numDiceText"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/diceDownButton"
                app:layout_constraintEnd_toStartOf="@+id/diceUpButton"
                app:layout_constraintHorizontal_weight="3"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>
        <ImageButton
                android:src="@android:drawable/arrow_up_float"
                android:layout_width="0dp"
                android:layout_height="0dp" android:id="@+id/diceUpButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/numDiceText"
                app:layout_constraintEnd_toStartOf="@+id/divider"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintDimensionRatio="1:1" app:layout_constraintHeight_max="48dp"
                app:layout_constraintWidth_max="48dp"/>
        <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/diceUpButton"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/modifierDownButton"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_weight="1"
        />
        <ImageButton
                android:src="@android:drawable/arrow_down_float"
                android:layout_width="0dp"
                android:layout_height="0dp" android:id="@+id/modifierDownButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/divider"
                app:layout_constraintEnd_toStartOf="@+id/modifierText"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintDimensionRatio="1:1" app:layout_constraintHeight_max="48dp"
                app:layout_constraintWidth_max="48dp"/>
        <TextView
                android:text="@string/temp"
                android:layout_width="0dp"
                android:layout_height="0dp" android:id="@+id/modifierText"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/modifierDownButton"
                app:layout_constraintEnd_toStartOf="@+id/modifierUpButton"
                app:layout_constraintHorizontal_weight="3"
                android:layout_marginStart="4dp" android:layout_marginEnd="4dp"
        />
        <ImageButton
                android:src="@android:drawable/arrow_up_float"
                android:layout_width="0dp"
                android:layout_height="0dp" android:id="@+id/modifierUpButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/modifierText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintDimensionRatio="1:1" app:layout_constraintHeight_max="48dp"
                app:layout_constraintWidth_max="48dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>