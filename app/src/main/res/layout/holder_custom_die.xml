<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="4dp" android:paddingStart="4dp"
              android:paddingLeft="4dp" android:paddingTop="4dp"
              android:paddingEnd="4dp" android:paddingRight="4dp"
              android:paddingBottom="4dp"
              android:id="@+id/customDieHolder" android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:baselineAligned="false">
        <include android:layout_width="match_parent" android:layout_height="match_parent"
                 android:id="@+id/simpleDieInclude"
                 tools:layout_conversion_absoluteHeight="0dp"
                 tools:layout_conversion_absoluteWidth="0dp" app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                 layout="@layout/holder_simple_die" android:layout_weight="5"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="2">
            <include android:layout_width="match_parent" android:layout_height="match_parent"
                     layout="@layout/fragment_up_down_buttons"
                     android:id="@+id/upDownButtonsInclude"
                     tools:layout_conversion_absoluteHeight="0dp" tools:layout_editor_absoluteY="0dp"
                     tools:layout_editor_absoluteX="0dp" tools:layout_conversion_absoluteWidth="0dp"
                     android:layout_weight="1"/>
            <Button
                    android:text="@string/temp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/dropDiceButton" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/radioGroup"
            android:checkedButton="@id/naturalRadioButton" android:orientation="horizontal">
        <RadioButton
                android:text="@string/natural"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/naturalRadioButton"
                android:maxLines="1" tools:layout_conversion_absoluteHeight="0dp" tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp" tools:layout_conversion_absoluteWidth="0dp"
                android:layout_weight="1"/>
        <RadioButton
                android:text="@string/advantage"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/advantageRadioButton"
                android:maxLines="1" tools:layout_conversion_absoluteHeight="0dp" tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp" tools:layout_conversion_absoluteWidth="0dp"
                android:layout_weight="1"/>
        <RadioButton
                android:text="@string/disadvantage"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/disadvantageRadioButton"
                android:maxLines="1" tools:layout_conversion_absoluteHeight="0dp" tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp" tools:layout_conversion_absoluteWidth="0dp"
                android:layout_weight="1"/>
    </RadioGroup>


</LinearLayout>