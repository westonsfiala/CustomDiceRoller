<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".ui.main.RollFragment" android:id="@+id/rollerLayout"
                                             android:layout_weight="1.0">
    <ImageButton
            android:src="@android:drawable/btn_dialog"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/displayImage"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintDimensionRatio="1:1"
            android:scaleType="fitCenter"
            android:background="#00FFFFFF" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/displayText"/>
    <TextView
            android:text="@string/temp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/displayText"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/displayImage"
            android:textColor="@android:color/primary_text_dark" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>