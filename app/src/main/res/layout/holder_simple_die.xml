<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/dieViewLayout"
                                                   android:clickable="true"
                                                   android:background="@drawable/button_default_ripple_background"
                                                   android:focusable="true"
                                                   android:layout_weight="1.0" android:padding="8dp"
                                                   android:paddingStart="8dp" android:paddingLeft="8dp"
                                                   android:paddingTop="8dp" android:paddingEnd="8dp"
                                                   android:paddingRight="8dp" android:paddingBottom="8dp">
    <ImageView
            android:src="@drawable/ic_d20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/dieDisplay"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/displayText" android:adjustViewBounds="true"
            app:layout_constraintDimensionRatio="1:1"/>
    <TextView
            android:text="@string/temp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/displayText"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            app:layout_constraintTop_toBottomOf="@+id/dieDisplay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:autoSizeTextType="uniform"
            app:layout_constraintStart_toStartOf="@+id/dieDisplay"
            app:layout_constraintEnd_toEndOf="@+id/dieDisplay" app:layout_constraintDimensionRatio="5:2"/>
</androidx.constraintlayout.widget.ConstraintLayout>