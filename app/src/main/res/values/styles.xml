<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="die_color">#FFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="die_color">#FFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <declare-styleable name="DieImages">
        <attr name="die_color" format="color" />
    </declare-styleable>

    <style name="DefaultColor">
        <item name="die_color">#FFF</item>
    </style>

    <style name="GoldGradientColor" parent="DefaultColor">
        <item name="die_color">@color/gold_gradient</item>
    </style>

    <style name="SteelGradientColor" parent="DefaultColor">
        <item name="die_color">@color/steel_gradient</item>
    </style>

    <style name="FireGradientColor" parent="DefaultColor">
        <item name="die_color">@color/fire_gradient</item>
    </style>

    <style name="ForestGradientColor" parent="DefaultColor">
        <item name="die_color">@color/forest_gradient</item>
    </style>

    <style name="BeachGradientColor" parent="DefaultColor">
        <item name="die_color">@color/beach_gradient</item>
    </style>

    <style name="RGBGradientColor" parent="DefaultColor">
        <item name="die_color">@color/rgb_gradient</item>
    </style>

</resources>
