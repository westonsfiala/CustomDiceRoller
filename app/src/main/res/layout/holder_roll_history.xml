<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp" android:paddingStart="8dp" android:paddingLeft="8dp" android:paddingTop="8dp"
            android:paddingEnd="8dp" android:paddingRight="8dp" android:paddingBottom="8dp">

        <TextView
                android:text="@string/temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/rollTitleText"
                android:textColor="@android:color/primary_text_dark" android:textAlignment="textStart"
                app:layout_constraintStart_toEndOf="@+id/rollResultText"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/rollResultText"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintEnd_toStartOf="@+id/rollTimeStampText" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toTopOf="@+id/rollDetailsText"/>
        <TextView
                android:text="@string/temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/rollDetailsText" android:textAlignment="textStart"
                android:textColor="@android:color/primary_text_dark"
                app:layout_constraintStart_toEndOf="@+id/rollResultText"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/rollTitleText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="@string/temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/rollTimeStampText"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" android:textAlignment="viewEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rollResultText"
                app:layout_constraintStart_toEndOf="@+id/rollTitleText"
                app:layout_constraintBottom_toTopOf="@+id/rollDetailsText"/>
        <TextView
                android:text="@string/temp"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/rollResultText"
                android:textColor="@android:color/primary_text_dark"
                android:textAlignment="center" android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:gravity="center"
                android:background="@android:color/background_dark"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintVertical_bias="0.0"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>