<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/constraintLayout">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/numberEditId"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/setTextId" android:importantForAutofill="no"
            app:layout_constraintBottom_toBottomOf="parent"
            android:inputType="numberSigned"/>
    <TextView
            android:text="@string/set_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setTextId"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/numberEditId"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/numberEditId"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/primary_text_dark" app:layout_constraintTop_toTopOf="@+id/numberEditId"
    />
</androidx.constraintlayout.widget.ConstraintLayout>